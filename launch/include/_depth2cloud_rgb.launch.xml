<launch>
  <!-- Input -->
  <arg name="camera_color_info_topic" default="/camera/color/camera_info" />
  <arg name="img_rect_color_topic" default="/camera/color/image_raw" />
  <arg name="img_rect_depth_topic" default="/camera/aligned_depth_to_color/image_raw" />

  <!-- Output -->
  <arg name="output_cloud_topic" default="/camera/depth/color/points" />

  <!-- Depth_image_proc/point_cloud_xyzrgb Nodelet- -->
  <node pkg="nodelet" type="nodelet" name="rs_depth_image_proc_nodelet_manager" args="manager" />
  <node pkg="nodelet" type="nodelet" name="rs_depth_image_proc_to_cloud_xyzrgb"
    args="load depth_image_proc/point_cloud_xyzrgb rs_depth_image_proc_nodelet_manager">
    <remap from="rgb/camera_info" to="$(arg camera_color_info_topic)" />
    <remap from="rgb/image_rect_color" to="$(arg img_rect_color_topic)" />
    <remap from="depth_registered/image_rect" to="$(arg img_rect_depth_topic)" />
    <remap from="depth_registered/points" to="$(arg output_cloud_topic)" />
  </node>

</launch>