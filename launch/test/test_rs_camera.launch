<launch>
  <arg name="align_depth" default="true" />
  <arg name="fps" default="15" />

  <include file="$(find realsense_ros_tools)/launch/rs_camera.launch" >
    <arg name="align_depth" default="$(arg align_depth)" />
    <arg name="fps" default="$(arg fps)" />
  </include>

  <!-- RViz -->
  <node name="rs_rosbag" pkg="rviz" type="rviz" args="-d $(find realsense_ros_tools)/launch/rviz/rs_camera.rviz" />
</launch>